# General OS environment settings.

export EDITOR="$(which subl) --new-window --wait"
export EDITOR="subl -w"
PATH="$HOME/bin:/usr/local/share/python:/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin:/usr/X11/bin"
export MANPATH="/usr/local/share/man:/usr/X11/man:/usr/share/man"

# Rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
#eval "$(rbenv init -)"
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Node.
export PATH="/usr/local/bin/node:$PATH"

# PATH EXPORTS
export PATH="/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/share/npm/bin:$PATH"

# PHP
export PATH="/usr/local/Cellar/php53/5.3.17/bin:$PATH"

# SSH COPY ID
export PATH="/usr/local/Cellar/ssh-copy-id/6.0p1/bin:$PATH"

# Google Utils
# export PATH=${PATH}:$HOME/.gsutil

# Python.
export PIP_RESPECT_VIRTUALENV="true"
export VIRTUALENVWRAPPER_PYTHON="/usr/bin/python"
export VIRTUALENVWRAPPER_HOOK_DIR="/Users/regi/.virtualenvs"
export WORKON_HOME="$HOME/www/apps/Python"
export PIP_VIRTUALENV_BASE=$WORKON_HOME
source /usr/local/bin/virtualenvwrapper.sh

# Ruby.
export RAILS_ENV="development"

# Project-specific.
# GitHub.
export GITHUB_ROOT="/Users/regi/GitHub/"


. ~/.dotfiles/osx
